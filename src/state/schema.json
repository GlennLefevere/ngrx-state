{
  "$schema": "http://json-schema.org/schema",
  "id": "StateSchematics",
  "title": "State Options Schema",
  "type": "object",
  "description": "Add state to module",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": {
        "message": "What name should the state have?"
      }
    },
    "data": {
      "type": "boolean",
      "description": "Add data state",
      "x-prompt": {
        "message": "Add data state?"
      }
    },
    "container": {
      "type": "boolean",
      "description": "Add container state",
      "x-prompt": {
        "message": "Add container state?"
      }
    },
    "effects": {
      "type": "boolean",
      "description": "Add effects",
      "x-prompt": {
        "message": "Add effects?"
      }
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the component.",
      "visible": false
    },
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "module": {
      "type": "string",
      "description": "The module to update"
    }
  },
  "required": [
    "name",
    "data",
    "container",
    "effects"
  ]
}